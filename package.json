{
  "name": "task-board",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run type-check && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.mts,.cts,.ctsx --fix --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.mts,.cts,.ctsx --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "vue": "^3.5.24"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.10",
    "@types/node": "^20",
    "@types/vite": "^5",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^9",
    "@vue/eslint-config-typescript": "^13",
    "@vue/tsconfig": "^0.5",
    "eslint": "^9",
    "eslint-plugin-vue": "^9",
    "husky": "^9",
    "lint-staged": "^15",
    "prettier": "^3",
    "typescript": "^5",
    "vite": "^7.2.4"
  }
}
